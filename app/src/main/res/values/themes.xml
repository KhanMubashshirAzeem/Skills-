<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Skills_plus.Light" parent="Theme.Material3.Light.NoActionBar">
        <!-- Light theme colors -->
        <item name="backgroundColor">@color/dark_gray</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="materialButtonStyle">@style/CustomButton</item>
        <item name="fontFamily">@font/calistoga_regular</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="Theme.Skills_plus.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Skills_plus.Light.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Skills_plus.Light.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
